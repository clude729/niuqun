<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/view_empty_cart"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/cart_empty"
            android:scaleType="fitCenter"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_marginTop="12dp"
            android:textColor="@color/color2"
            android:textSize="@dimen/h4"
            android:text="@string/empty_cart_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_no_data"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/no_data"
            android:scaleType="fitCenter"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_marginTop="12dp"
            android:textColor="@color/color2"
            android:textSize="@dimen/h4"
            android:text="@string/no_data_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_no_network"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/no_network"
            android:scaleType="fitCenter"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_marginTop="12dp"
            android:textColor="@color/color2"
            android:textSize="@dimen/h4"
            android:text="@string/http_client_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>