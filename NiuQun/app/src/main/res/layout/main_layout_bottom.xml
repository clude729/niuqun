<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_chat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/liaotian_press" />

            <TextView
                android:id="@+id/text_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/we_chat"
                android:textColor="@color/color1"
                android:textSize="@dimen/h1" />
        </LinearLayout>
        
        <com.daoyu.chat.ui.widget.DragPointView
            android:id="@+id/chat_num"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/h2"
            android:layout_marginTop="2dp"
            android:text="2"
            android:layout_marginEnd="19dp"
            android:layout_width="19dp"
            android:layout_height="19dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_brands"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_brands"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/pinpai" />

        <TextView
            android:id="@+id/text_brands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_brands"
            android:textColor="@color/color3"
            android:textSize="@dimen/h1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_my"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/my" />

        <TextView
            android:id="@+id/text_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_center"
            android:textColor="@color/color3"
            android:textSize="@dimen/h1" />
    </LinearLayout>
</LinearLayout>